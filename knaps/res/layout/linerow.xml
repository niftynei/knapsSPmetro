<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@+id/name"
  android:layout_below="@+id/name"
  android:padding="12dip">
 <TextView android:text="Ticket Cost" android:layout_width="wrap_content" android:textSize="14dip" android:id="@+id/tarifa" android:layout_height="wrap_content" android:layout_below="@+id/color" android:layout_alignParentRight="true"></TextView>
 <TextView android:text="Line Name" android:layout_width="wrap_content" android:textStyle="bold" android:textSize="16dip" android:id="@+id/name" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></TextView>
 <TextView android:text="Line Color" android:layout_width="wrap_content" android:textSize="14dip" android:id="@+id/color" android:layout_height="wrap_content" android:layout_alignTop="@+id/name" android:layout_alignRight="@+id/tarifa"></TextView>

 <ImageView
     android:id="@+id/imageView1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/name"
     android:src="@android:drawable/sym_action_call" />

</RelativeLayout>
